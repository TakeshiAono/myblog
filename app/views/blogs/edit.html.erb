<h1>Editing Blog</h1>

<%= form_with(model: @blog, local: true) do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br>
  <br>
  <%= form.label :content %>
  <%= form.text_field :content %>
  <br>
  <br>
  <%= form.submit%>
<% end %>

<%= link_to 'Show', @blog %> |
<%= link_to 'Back', blogs_path %>





